# First stage: Build phase
FROM ubuntu:24.04 AS builder

# ğŸ“ Set environment variables for timezone and to suppress interactive prompts during package installation ğŸ“… 2025-01-09 00:34:14
ENV DEBIAN_FRONTEND=noninteractive
# ğŸŒ Set the system timezone to Asia/Seoul
ENV TZ=Asia/Seoul

# Install essential packages and configure timezone
RUN apt-get update && \
  apt-get install -y \
  curl nano && \
  ln -snf /usr/share/zoneinfo/$TZ /etc/localtime


