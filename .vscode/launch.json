  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Current File (lldb-dap)",
      "type": "lldb-dap",
      "request": "launch",
      "program": "${workspaceFolder}/build/${relativeFileDirname}/${fileBasenameNoExtension}",
      "args": [], // Arguments to pass to the program
      "env": [], // Environment variables
      "cwd": "${workspaceFolder}", // Working directory
      "stopOnEntry": false, // Do not stop at entry
      "runInTerminal": true, // Run in terminal for interactive input
      "preLaunchTask": "Build Current C File" // Automatically run the build task before debugging
    }
  ]
}
